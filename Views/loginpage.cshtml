@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "umbLayout.cshtml";
}

<div class="main">
    <div class="container">
        <div class="inner-main row">
            <div class="col-lg-12 col-centered">
                <a href="/" class="btn btn-link">« Back to home page</a>
                <div class="block white bg logon clearfix">
                    <div id="carousel">
                        <ul class="slider_logon list-unstyled">
                            <li><img src="/images/slider_logon/slide_2.png" alt=""></li>
                            <li><img src="/images/slider_logon/slide_3.png" alt=""></li>
                            <li><img src="/images/slider_logon/slide_4.png" alt=""></li>
                            <li><img src="/images/slider_logon/slide_1.png" alt=""></li>
                        </ul>
                    </div>
                    <div class="col-sm-7 col-sm-push-5 col-md-6 col-md-push-6">
                    <div class="block white clearfix">
                            <section>
                                <div class="col-sm-10 content col-centered">
                                    <h2>Login</h2>
                                    <!-- Login page -->
                                    <!-- you are calling the get and then it is redirected to a post page -->
                                    @Html.Action("RenderLogin", "AuthSurface")

                                    <hr />

                                        @CurrentPage.BodyText
        
                                    <hr />
                                    <a href="/register" class="btn green-line md">Submit request to be a Registered User</a>
                                    <a href="/" class="btn btn-link md">Learn about SHIPs</a>
                                </div>


                            </section>
                        </div>

                    </div>
                </div>

                <h4 class="text-center">
                    @CurrentPage.BodyText1
                </h4>
            </div>

        </div>
    </div>
</div>

