@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "umbLayout.cshtml";
    var success = TempData["success"] != null;
}

<div class="main">
    <div class="container">
        <div class="inner-main">
            <div class="col-sm-9 col-md-7 col-xs-12 col-centered">

                <div class="block white clearfix">
                    <section>
                        <div class="col-sm-10 content col-centered">
                            <h2>Forgotten Password</h2>
                            @if (success)
                            {

                                <p>
                                  
                                    Thank You! Your request has been submitted. If the email address you entered is in our system you will receive an email shortly.
                                    If you do not receive an email after a while, please verify that you entered the registered email associated with your
                                    shiptacenter.org account. Please check your Junk mail folder as well. If you have additional questions, please contact the SHIP National
                                    Technical Assistance Center at info@shiptacenter.org or 877-839-2675.
                                </p>
                            }
                            else
                            {

                                @Html.Action("RenderForgottenPassword", "AuthSurface")
                            }
                        </div>
                    </section>
                </div>

            </div>
        </div>

    </div>
</div>