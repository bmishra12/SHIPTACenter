@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
     Layout = "umbLayout.cshtml";

    var success = TempData["success"] != null;
    var message = TempData["message"];

}


    <div class="container">
        <div class="inner-main tab-content">

            <!-- My user content -->
            <div role="tabpanel" class="tab-pane active" id="myUsers">
                <h2>My Users</h2>
                <div class="col-sm-11 col-md-8 col-centered">
                    <div class="block white clearfix row">
                        <section>
                            <div class="col-sm-10 content col-centered">
                                <h2>User Profile</h2>
                                @if (success)
                                {
                                    <p>
                                        <a href="/approved" class="btn btn-link">« Back to My Users</a>
                                    </p>

                                    <p>

                                        @Html.Raw(@message)
                                        

                                    </p>

                                }
                                else
                                {

                                     @Html.Action("RenderUserApproval", "AuthSurface")
                                }
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
</div>